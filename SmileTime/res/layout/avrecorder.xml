<?xml version="1.0" encoding="utf-8"?>

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
			
			<ImageView android:src="@drawable/logo2big"
					   android:layout_width="320px" 
					   android:id="@+id/image01" 
					   android:layout_height="240px">
			</ImageView>
			<SurfaceView
				android:layout_width="320px"
				android:layout_height="240px"
				android:id="@+id/avsv" 
				android:layout_toRightOf="@id/image01"/>  
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="FPS: 14"
				android:layout_below="@id/image01"
				android:id="@+id/fps"
			></TextView>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_below="@id/avsv"
				android:id="@+id/counter"
			></TextView>
	
		<SlidingDrawer 
			android:layout_height="wrap_content" 
			android:handle="@+id/handle" 
			android:content="@+id/content" 
			android:id="@+id/slide" 
			android:orientation="vertical" 
			android:layout_width="fill_parent"
			android:allowSingleTap="true"
			android:animateOnClick="false"
			>
			 	<ImageView 
			 		android:layout_width="wrap_content"
			 		 android:layout_height="wrap_content" 
			 		 android:id="@id/handle" 
			 		 android:src="@drawable/chatdrawericon"></ImageView>
				<RelativeLayout 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:id="@id/content" android:background="#FF212121">
					<ScrollView
					
							android:id="@+id/scrollChatView"
							android:layout_width="fill_parent"
							android:layout_height="200px"
							android:layout_margin="10px"
							>
						<TableLayout
							android:id="@+id/chatText"
							android:layout_width="fill_parent"
							android:layout_height="100px"
							android:orientation="vertical"
							android:background="#cccccc">
							<TableRow
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginBottom="1dp"
								android:padding="2px"
								android:background="#212121"
								>
								<TextView
									android:text="[SMILETIME] Waiting for some messages.. enjoy!"
									android:layout_height="wrap_content"
									android:layout_width="fill_parent"
								></TextView>
							</TableRow>
						</TableLayout>
					</ScrollView>
					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						>
						<EditText
							android:id="@+id/chatInput"
							android:layout_width="440px"
							android:layout_height="wrap_content"
							></EditText>
						<Button
							android:id="@+id/chatButton"
							android:layout_width="90px"
							android:layout_height="wrap_content"
							android:layout_toRightOf="@id/chatInput"
							android:text="SEND"
						></Button>
					</RelativeLayout>
						
				</RelativeLayout>
		</SlidingDrawer>
	

</RelativeLayout>